                    android:textColor="@color/colorGray"
                    android:textSize="15sp"  />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_setting_list"
                android:paddingTop="5dp">

                <TextView
