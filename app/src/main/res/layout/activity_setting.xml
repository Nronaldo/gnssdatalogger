<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/settingtitle"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:text="@string/rinex"
            android:textColor="@color/colorDarkGray"
            android:textSize="60sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/settingtitle"
            android:text="@string/setting"
            android:textColor="@color/colorDarkGray"
            android:textSize="58sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/setting_btnRestore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/setting_groupSetting"
        android:layout_centerHorizontal="true"
        android:alpha=".8"
        android:fontFamily="@font/xiugaifront"
        android:text="@string/restore_defaults"
        android:textColor="@color/colorDarkGray"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/setting_groupVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_btnRestore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/xiugaifront"
            android:text="@string/version"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorGray"
            android:textStyle="bold"
            android:textSize="20sp" />


        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/setting_version"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"

            android:background="@drawable/bg_btn_edit"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:theme="@style/Spinner" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/setting_groupNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_groupVersion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/nav"
            android:textColor="@color/colorGray"
            android:layout_marginTop="5dp"
            android:textSize="16sp" />


        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/setting_recordNav"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_edit"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:theme="@style/Spinner"
            />

    </LinearLayout>

    <ScrollView
